										Param( "express", "bjkLoc = RelativeCoord( buyLoc, buyDir, 45, 13 )" )
									--]
									End()
									
									-- 45도 위치에 로봇을 spawn한다
									Action( "add mob" )
									--[
										Param( "index", 1651125 )
										Param( "group", 2200101 )
										Param( "use loc var", "true" )
										Param( "loc var", "bjkLoc" )
										Param( "dir var", "bjkDir" )
										Param( "no spawn wait", "true" )
